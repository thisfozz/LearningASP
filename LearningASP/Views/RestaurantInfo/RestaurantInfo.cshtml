@model LearningASP.Models.Restaurant;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Информация о ресторане</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>

    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <h2>@Model.Name</h2>
            </div>
            <div class="col-md-6">
                <h2>Адрес ресторана</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Тип кухни:</th>
                            <td>@Model.CuisineType</td>
                        </tr>
                        <tr>
                            <th>Номер телефона:</th>
                            <td>@Model.PhoneNumber</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="col-md-6">
                <address>
                    @Model.Address
                </address>
            </div>
        </div>
    </div>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
