@{
    ViewData["Title"] = "Домашняя работа 1";
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
    <body>
        <div class="container mt-5">
            <header class="text-center mb-4">
                <h1>Домашняя работа 1</h1>
            </header>
            <a href="@Url.Action("CurrentDateInYear", "ShowDate")" class="assignment-link">
                <div class="assignment-title col-md-8 text-start">
                    Посмотреть текущий день в году
                </div>
            </a>
            <a href="@Url.Action("RandomAlphabetOnDisplay", "Alphabet")" class="assignment-link">
                <div class="assignment-title col-md-8 text-start">
                Показать случайную букву из алфавита
                </div>
            </a>
            <a href="@Url.Action("RestaurantDisplayInfo", "Restaurant")" class="assignment-link">
                <div class="assignment-title col-md-8 text-start">
                    Показать информацию о ресторане
                </div>
            </a>
        <a href="@Url.Action("CountryDisplayInfo", "Country")" class="assignment-link">
                <div class="assignment-title col-md-8 text-start">
                    Показать информацию о странах
                </div>
            </a>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>