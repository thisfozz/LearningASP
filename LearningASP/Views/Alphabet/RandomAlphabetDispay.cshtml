@{
    ViewData["Title"] = "Случайная буква алфавита";
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <form asp-controller="Alphabet" asp-action="RandomAlphabetOnDisplay" method="get">
            <label for="userInput">Пожалуйста, введите любое число:</label>
            <input type="number" id="userInput" name="userInput" required>
            <button type="submit">Отправить</button>
        </form>
        <div class="text-center mb-4">
            <h1>Случайная буква алфавита: @ViewBag.Message</h1>
        </div>
    </div>
</body>
</html>